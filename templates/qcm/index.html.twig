{% extends 'base.html.twig' %}

{% block title %}QCM index{% endblock %}

{% block body %}
    <h1>QCM index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Question</th>
                <th>Answer</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for q_c_m in q_c_ms %}
            <tr>
                <td>{{ q_c_m.id }}</td>
                <td>{{ q_c_m.question }}</td>
                <td>{{ q_c_m.answer }}</td>
                <td>
                    <a href="{{ path('q_c_m_show', {'id': q_c_m.id}) }}">show</a>
                    <a href="{{ path('q_c_m_edit', {'id': q_c_m.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('q_c_m_new') }}">Create new</a>
{% endblock %}
